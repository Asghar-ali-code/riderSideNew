<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintComp">

        <View
            android:id="@+id/viewCompletedOrders"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/request_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bookingIdComp"
            app:layout_constraintTop_toTopOf="parent">


        </View>

        <TextView
            android:id="@+id/bookingIdComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lato"
            android:text="Booking ID:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewCompletedOrders" />


        <TextView
            android:id="@+id/bookingIdNumberComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/lato"
            android:text="123DPCVR"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bookingIdComp"
            app:layout_constraintStart_toEndOf="@+id/bookingIdComp"
            app:layout_constraintTop_toTopOf="@+id/bookingIdComp" />


        <TextView

            android:id="@+id/addressTextComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/lato"
            android:text="Address:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/bookingIdComp"
            app:layout_constraintTop_toBottomOf="@+id/bookingIdComp" />

        <TextView
            android:id="@+id/addresComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="address comes here"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/addressTextComp"
            app:layout_constraintTop_toBottomOf="@+id/addressTextComp" />

        <TextView
            android:id="@+id/chargeComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:text="Charge:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/addresComp"
            app:layout_constraintStart_toStartOf="@+id/addresComp"
            app:layout_constraintTop_toBottomOf="@+id/addresComp" />

        <TextView
            android:id="@+id/dollarSignComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="$"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/chargeComp"
            app:layout_constraintStart_toEndOf="@+id/chargeComp"
            app:layout_constraintTop_toTopOf="@+id/chargeComp" />

        <TextView
            android:id="@+id/chargesComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/dollarSignComp"
            app:layout_constraintStart_toEndOf="@+id/dollarSignComp"
            app:layout_constraintTop_toTopOf="@+id/dollarSignComp"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/lato"
            android:text="Completed"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/viewCompletedOrders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewCompletedOrders"
            app:layout_constraintVertical_bias="0.484" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>