<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintPro"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/recViewPro"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:background="@drawable/request_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </View>

        <TextView
            android:id="@+id/bookingIdPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lato"
            android:text="Booking ID:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recViewPro" />


        <TextView
            android:id="@+id/bookingIdNumberPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/lato"
            android:text="123DPCVR"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bookingIdPro"
            app:layout_constraintStart_toEndOf="@+id/bookingIdPro"
            app:layout_constraintTop_toTopOf="@+id/bookingIdPro" />


        <TextView

            android:id="@+id/addressTxtPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/lato"
            android:text="Address:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/bookingIdPro"
            app:layout_constraintTop_toBottomOf="@+id/bookingIdPro" />

        <TextView
            android:id="@+id/addres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="address comes here"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/addressTxtPro"
            app:layout_constraintTop_toBottomOf="@+id/addressTxtPro" />

        <TextView
            android:id="@+id/chargePro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:text="Charge:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/addres"
            app:layout_constraintStart_toStartOf="@+id/addres"
            app:layout_constraintTop_toBottomOf="@+id/addres" />

        <TextView
            android:id="@+id/dollarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="$"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/chargePro"
            app:layout_constraintStart_toEndOf="@+id/chargePro"
            app:layout_constraintTop_toTopOf="@+id/chargePro" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/dollarSign"
            app:layout_constraintStart_toEndOf="@+id/dollarSign"
            app:layout_constraintTop_toTopOf="@+id/dollarSign"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/texProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/lato"
            android:text="In Progress..."
            android:textColor="@color/red"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/recViewPro"
            app:layout_constraintEnd_toEndOf="@+id/recViewPro"
            app:layout_constraintTop_toTopOf="@+id/recViewPro" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>