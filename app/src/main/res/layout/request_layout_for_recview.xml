<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintRec">

        <View
            android:id="@+id/recView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/request_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </View>

        <TextView
            android:id="@+id/bookingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Booking ID:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recView" />


        <TextView
            android:id="@+id/bookingIdNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:layout_marginStart="4dp"
            android:text="123DPCVR"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bookingId"
            app:layout_constraintStart_toEndOf="@+id/bookingId"
            app:layout_constraintTop_toTopOf="@+id/bookingId" />


        <TextView

            android:id="@+id/addressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/lato"
            android:text="Address:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/bookingId"
            app:layout_constraintTop_toBottomOf="@+id/bookingId" />

        <TextView
            android:id="@+id/addres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="address comes here"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/addressTxt"
            app:layout_constraintTop_toBottomOf="@+id/addressTxt" />

        <TextView
            android:id="@+id/charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:text="Charge:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/addres"
            app:layout_constraintStart_toStartOf="@+id/addres"
            app:layout_constraintTop_toBottomOf="@+id/addres" />

        <TextView
            android:id="@+id/dollarSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="$"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/charge"
            app:layout_constraintStart_toEndOf="@+id/charge"
            app:layout_constraintTop_toTopOf="@+id/charge" />


        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/dollarSign"
            app:layout_constraintStart_toEndOf="@+id/dollarSign"
            app:layout_constraintTop_toTopOf="@+id/dollarSign"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:text="Accept"
            android:layout_marginTop="32dp"
            android:layout_marginRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="@+id/recView"
            app:layout_constraintTop_toTopOf="@+id/recView" />


        <TextView
            android:id="@+id/btnReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/lato"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:text="Reject"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/btnAccept"
            app:layout_constraintStart_toStartOf="@+id/btnAccept"
            app:layout_constraintTop_toBottomOf="@+id/btnAccept" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>